<p id="notice"><%= notice %></p>

<div class="container">
  <h1 class="text-center">Users</h1>

  <table class="table table-striped mx-auto align-center">
    <thread>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Actions</th>
      </tr>
    </thread>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.first_name + " " + user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= user.phone %></td>
          <td class="btn-group" role="group" aria-label="Basic example">
            <%= link_to 'Show', user, class: "btn btn-outline-warning btn-sm" %>
            <%= link_to 'Edit', edit_user_path(user), class: "btn btn-outline-warning btn-sm" %>
            <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-warning btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New User', new_user_path %>
</div>  
